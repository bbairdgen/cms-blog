<!-- Loop over each object in the projects array -->
{{#each posts }}
<div class="row mb-4 project">
  <div id="card" class="card">
    <div class="card-header display-flex justify-space-between align-center">
      <h2>
     <a class="card-title pl-3" href="/post/{{id}}">{{title}}</a>
      </h2>
    <p class="card-description p-1">
      Posted by {{user.name}} on {{format_date date_created}}
    </p>
    </div>
    <div>
    <p class="card-body">
      {{description}}
    </p>
    </div>
  </div>
</div>
{{/each}}
